{
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "singleProjectMode": true,
        "auth": {
            "port": 9099
        },
        "firestore": {
            "port": 8080
        },
        "database": {
            "port": 9000
        },
        "ui": {
            "enabled": true,
            "port": 4000
        }
    }
}
